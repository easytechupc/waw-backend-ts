{
  "name": "waw-backend-ts",
  "title": "WAW API",
  "version": "0.0.0",
  "description": "WAW Backend Application, written with TypeScript and Nest.js, powered by Node.js",
  "author": "Easy Tech <hello@easytech.ga>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint --ext js,ts --cache .",
    "lint:fix": "eslint --ext js,ts --cache --fix .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d src/config/cli.config.ts",
    "schema:log": "typeorm-ts-node-commonjs schema:log -d src/config/cli.config.ts",
    "schema:drop": "typeorm-ts-node-commonjs schema:drop -d src/config/cli.config.ts",
    "migrate:create": "typeorm-ts-node-commonjs migration:create",
    "migrate:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/cli.config.ts",
    "migrate:run": "typeorm-ts-node-commonjs migration:run -d src/config/cli.config.ts",
    "migrate:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/cli.config.ts",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "@automapper/classes": "^8.3.7",
    "@automapper/core": "^8.3.7",
    "@automapper/nestjs": "^8.3.7",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^8.1.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "sqlite3": "^5.0.8",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "28.1.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.2.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.7.3"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,json,md,yml}": "prettier --write"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>src/$1",
      "^test/(.*)$": "<rootDir>test/$1"
    },
    "testRegex": "src/.*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
